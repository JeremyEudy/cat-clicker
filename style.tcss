VerticalScroll{
    border: round $primary;
}

#display-container {
    layout: grid;
    grid-size: 4 1;
}

#num-scroll {
}

#log-scroll {
}

#sprite-container {
    column-span: 3;
    layout: grid;
    grid-size: 1 5;
}

Sprite {
    row-span: 3;
}

LogDisplay {
    height: 100%;
    row-span: 2;
}

NumDisplay {
    content-align-horizontal: left;
}

Controls {
    layout: grid;
    grid-size: 5;
    grid-gutter: 1;
}

#catch {
    column-span: 5;
}

Button {
    width: 100%;
}

.hidden {
    display: none;
}
